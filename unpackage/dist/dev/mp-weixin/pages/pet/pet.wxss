}

/* 顶部标题栏 */
.header.data-v-44a33225 {
  background: linear-gradient(to right, #4e54c8, #8f94fb);
  padding: 80rpx 30rpx 40rpx;
  /* text-align: center; */
  border-bottom-left-radius: 30rpx;
