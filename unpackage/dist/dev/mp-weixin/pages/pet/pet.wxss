/* 宠物卡片 */
.card.data-v-44a33225 {
  background: #fff;
  margin: 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}
.avatar-wrapper.data-v-44a33225 {
  display: flex;
  justify-content: center;
  position: relative;
  align-items: center;
    width: 100%;
}
.avatar.data-v-44a33225 {
  width: 140rpx;
  height: 140rpx;
}
.level.data-v-44a33225 {
