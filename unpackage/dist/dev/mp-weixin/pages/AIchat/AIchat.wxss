:host{display:flex;flex-direction:column}

.chat-wrapper.data-v-9f4e77f0 {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f7fa;
}
.chat-header.data-v-9f4e77f0 {
  background: linear-gradient(to right,#4e54c8, #8f94fb);
  color: white;
  padding: 40rpx 32rpx 24rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  text-align: center;
}
.chat-title.data-v-9f4e77f0 {
  font-size: 36rpx;
  font-weight: bold;
}
.chat-subtitle.data-v-9f4e77f0 {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 10rpx;
}
.chat-body.data-v-9f4e77f0 {
  flex: 1;
  padding: 30rpx 24rpx;
}
.chat-message.data-v-9f4e77f0 {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.chat-message.ai.data-v-9f4e77f0 {
  flex-direction: row;
}
.chat-message.user.data-v-9f4e77f0 {
  flex-direction: row-reverse;
}
.avatar.data-v-9f4e77f0 {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin: 0 16rpx;
}
.bubble.data-v-9f4e77f0 {
  max-width: 70%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
  color: #333;
  word-wrap: break-word;
}
.chat-message.user .bubble.data-v-9f4e77f0 {
  background-color: #dcefff;
}
.input-area.data-v-9f4e77f0 {
  padding: 20rpx;
  display: flex;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}
.input-box.data-v-9f4e77f0 {
  flex: 1;
  border: 1px solid #ccc;
  border-radius: 30rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
}
.send-button.data-v-9f4e77f0 {
  margin-left: 20rpx;
  height: 70rpx;
  padding: 0 32rpx;
  line-height: 70rpx;
  background-color: #4e54c8;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
}
.scroll-anchor.data-v-9f4e77f0 {
  height: 1rpx;
}
